<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ebony_clay"
        tools:context=".ui.detail.tvshow.tvshowDetailActivity">

        <ImageView
            android:id="@+id/image_tvshow_background"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:contentDescription="@string/background_image"
            android:foreground="@drawable/fg_poster_shadow"
            android:scaleType="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/poster_infinity_war" />

        <ImageView
            android:id="@+id/image_tvshow_poster"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_32dp"
            android:contentDescription="@string/poster"
            app:layout_constraintBottom_toBottomOf="@id/image_tvshow_background"
            app:layout_constraintLeft_toLeftOf="@id/image_tvshow_background"
            app:layout_constraintTop_toTopOf="@id/image_tvshow_background"
            tools:src="@drawable/poster_infinity_war" />

        <TextView
            android:id="@+id/text_tvshow_title"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16dp"
            android:padding="@dimen/padding_16dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/image_tvshow_background"
            tools:text="Avengers : Infinity War (2016)" />

        <TextView
            android:id="@+id/text_user_score"
            style="@style/DisplayText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_score"
            app:layout_constraintBottom_toBottomOf="@id/text_score"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_score"
            app:layout_constraintTop_toTopOf="@id/text_score" />

        <TextView
            android:id="@+id/text_score"
            style="@style/DisplayText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_score"
            android:padding="@dimen/padding_16dp"
            app:layout_constraintBottom_toBottomOf="@id/button_homepage"
            app:layout_constraintLeft_toRightOf="@id/text_user_score"
            app:layout_constraintRight_toLeftOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/text_tvshow_title"
            tools:text="75" />

        <ProgressBar
            android:id="@+id/progress_bar_score"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:progress="70"
            android:progressDrawable="@drawable/circle"
            style="?android:progressBarStyleHorizontal"
            app:layout_constraintBottom_toBottomOf="@id/text_score"
            app:layout_constraintLeft_toLeftOf="@id/text_score"
            app:layout_constraintRight_toRightOf="@id/text_score"
            app:layout_constraintTop_toTopOf="@id/text_score" />
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/margin_8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/button_homepage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_tvshow_title" />

        <Button
            android:id="@+id/button_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_round_play_arrow"
            android:drawablePadding="@dimen/padding_8dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:padding="@dimen/padding_8dp"
            android:text="@string/play_trailer"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/divider"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_tvshow_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/mirage"
            app:layout_constraintBottom_toBottomOf="@id/text_genre"
            app:layout_constraintTop_toTopOf="@id/text_duration" />

        <TextView
            android:id="@+id/text_duration"
            style="@style/DisplayText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:drawablePadding="@dimen/padding_8dp"
            android:gravity="center"
            android:padding="@dimen/padding_8dp"
            app:drawableLeftCompat="@drawable/ic_timer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="2h 29m" />

        <TextView
            android:id="@+id/text_genre"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/text_duration"
            tools:text="Adventure, Action, Science Fiction" />

        <TextView
            android:id="@+id/text_tagline"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/text_genre"
            tools:text="An entire universe. Once and for all." />

        <TextView
            android:id="@+id/text_overview_title"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/padding_16dp"
            android:text="@string/overview"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/text_tagline" />

        <TextView
            android:id="@+id/text_overview"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_16dp"
            app:layout_constraintTop_toBottomOf="@id/text_overview_title"
            tools:text="As the Avengers and their allies have continued to protect the world from threats too large for any one hero to handle, a new danger has emerged from the cosmic shadows: Thanos. A despot of intergalactic infamy, his goal is to collect all six Infinity Stones, artifacts of unimaginable power, and use them to inflict his twisted will on all of reality. Everything the Avengers have fought for has led up to this moment - the fate of Earth and existence itself has never been more uncertain." />

        <TextView
            android:id="@+id/text_creator"
            style="@style/DisplayText.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/divider2"
            app:layout_constraintTop_toTopOf="@id/divider2"
            tools:text="Joe Russo" />

        <TextView
            style="@style/DisplayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="@string/creator"
            app:layout_constraintLeft_toLeftOf="@id/text_creator"
            app:layout_constraintTop_toBottomOf="@id/text_creator" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/margin_16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/text_casts_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_overview" />

        <TextView
            android:id="@+id/text_casts"
            style="@style/DisplayText.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            app:layout_constraintLeft_toRightOf="@id/divider2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/divider2"
            tools:text="Robert Downey Jr., Chris Hemsworth, Chris Evans, Scarlett Johansson" />

        <TextView
            android:id="@+id/text_casts_title"
            style="@style/DisplayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_16dp"
            android:text="@string/casts"
            app:layout_constraintLeft_toLeftOf="@id/text_casts"
            app:layout_constraintTop_toBottomOf="@id/text_casts" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/text_keywords"
            app:layout_constraintTop_toTopOf="@id/text_status_title" />

        <TextView
            android:id="@+id/text_status_title"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingTop="@dimen/padding_16dp"
            android:text="@string/status"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_casts_title"
            app:layout_goneMarginTop="@dimen/margin_16dp" />

        <TextView
            android:id="@+id/text_status"
            style="@style/DisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_status_title"
            tools:text="Released" />

        <TextView
            android:id="@+id/text_type_title"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingTop="@dimen/padding_16dp"
            android:text="@string/type"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_language" />

        <TextView
            android:id="@+id/text_type"
            style="@style/DisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_type_title"
            tools:text="Scripted" />

        <TextView
            android:id="@+id/text_language_title"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingTop="@dimen/padding_16dp"
            android:text="@string/original_language"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_status" />

        <TextView
            android:id="@+id/text_language"
            style="@style/DisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_language_title"
            tools:text="English" />

        <TextView
            android:id="@+id/text_keywords_title"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingTop="@dimen/padding_16dp"
            android:text="@string/keywords"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_last_season" />

        <TextView
            android:id="@+id/text_keywords"
            style="@style/DisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_32dp"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_keywords_title"
            tools:text="magic, sacrifice, superhero, based on comic, space, battlefield, genocide, magical object, super power, team, aftercreditsstinger, marvel cinematic universe, cosmic" />

        <TextView
            android:id="@+id/text_last_season_title"
            style="@style/DisplayText.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:paddingTop="@dimen/padding_16dp"
            android:text="@string/last_season"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_type" />

        <TextView
            android:id="@+id/text_last_season"
            style="@style/DisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_16dp"
            android:textColor="@color/black_text"
            app:layout_constraintTop_toBottomOf="@id/text_last_season_title"
            tools:text="Season 8 2019 | 10 Episodes\nIn Arrow's final season, Oliver Queen is forced to confront the reality of what it means to be a hero." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>